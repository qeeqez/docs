{
  "$schema": "node_modules/oxlint/configuration_schema.json",
  "rules": {
    "react": "warn",
    "typescript": "warn",
    "react-perf": "warn",
    "jsx-a11y": "warn"
  },
  "plugins": [
    "react",
    "react-perf"
  ],
  "ignorePatterns": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "out",
    ".fumadocs",
    "routeTree.gen.ts"
  ]
}